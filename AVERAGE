#Time series plot of the average number of steps taken

intervalSplit <- split(myfile$steps, myfile$interval)

averageStepsPerInterval <- sapply(intervalSplit, mean, na.rm=TRUE) 

plot(intervalunq, averageStepsPerInterval, type="l", main="Average number of steps per interval across all days",xlab="Interval", ylab="Average # of steps across all days", 
  lwd=2, col="blue")

maxIntervalDays <- max(averageStepsPerInterval, na.rm=TRUE)
maxIndex <- as.numeric(which(averageStepsPerInterval == maxIntervalDays))

maxInterval <- uniqueIntervals[maxIndex]
abline(v=maxInterval, col="red", lwd=3)
